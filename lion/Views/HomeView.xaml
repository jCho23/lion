<?xml version="1.0" encoding="UTF-8"?>
<TabbedPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="lion.Views.HomeView">

    <ContentPage>
        <ListView
            x:Name= "listViewFeed">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell 
                        Text="{Binding Post}"
                        Detail="{Binding Status}"
                        ImageSource="{Binding UserUrl}"/>

                     
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage>
   
</TabbedPage>
