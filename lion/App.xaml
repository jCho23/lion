<?xml version="1.0" encoding="utf-8"?>
<Application 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="lion.App">
    
	<Application.Resources>
        <ResourceDictionary>
            <!--Colors-->
            <Color x:Key="HeaderTextColor">#585858</Color>
            <Color x:Key="BodyTextColor">#C3C3C3</Color>
            <Color x:Key="ButtonBackgroundColor">#85bb65</Color>
            <Color x:Key="BackgroundColor">#FFFFFF</Color>
            <Color x:Key="LoginButtonBackgroundColor">#000000</Color>




            
            <Style TargetType="NavigationPage">
                <Setter Property="HasNavigationBar" Value="True" />
                <Setter Property="BarTextColor" Value="Gold" />
                <Setter Property="BarBackgroundColor" Value="#191970" />
            </Style>

            <Style
                TargetType= "Label">
                    <Setter Property="TextColor" Value="Black"/>

            </Style>

            <OnPlatform 
                x:Key="SUPREME"
                x:TypeArguments="x:String">
                    <On Platform="iOS" Value="SUPREME" />
                    <On Platform="Android" Value="SUPREME.ttf#SUPREME" />
            </OnPlatform>

        </ResourceDictionary>
	</Application.Resources>
</Application>
