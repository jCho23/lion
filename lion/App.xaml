<?xml version="1.0" encoding="utf-8"?>
<Application 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="lion.App">
    
	<Application.Resources>
		<!-- Application resource dictionary -->
           
        <ResourceDictionary>
            <Style TargetType="NavigationPage">
                <Setter Property="HasNavigationBar" Value="True" />
                <Setter Property="BarTextColor" Value="Gold" />
                <Setter Property="BarBackgroundColor" Value="#191970" />
            </Style>

            <Style
                TargetType= "Label">
                    <Setter Property="TextColor" Value="Black"/>

            </Style>

            <OnPlatform 
                x:Key="Aaargh"
                x:TypeArguments="x:String">
                    <On Platform="iOS" Value="SUPREME" />
                    <On Platform="Android" Value="Aaargh.ttf#Aaargh" />
            </OnPlatform>

        </ResourceDictionary>
	</Application.Resources>
</Application>
